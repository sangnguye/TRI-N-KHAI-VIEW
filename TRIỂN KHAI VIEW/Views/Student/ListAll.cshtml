@model IEnumerable<TRIỂN_KHAI_VIEW.Models.Student>

<h1>Thông tin sinh viên lớp K19</h1>
<table class="table">
    <tr>
        <th>STT</th>
        <th>Tên</th>
        <th>Tuổi</th>
        <th>Giới tính</th>
        <th>Hình ảnh</th>
    </tr>   
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            @if (item.Gender == true)
            {
                <td>Nam</td>
            }
            else
            {
                <td>Nữ</td>
            }
            <td><img src="@item.ImgUrl" height="100"/></td>
        <td>@Html.ActionLink("Detail", "ListOnlyStudent", new { id=item.Id })</td>
        <td>@Html.ActionLink("Edit", "EditStudent", new { id = item.Id })</td>
            <td>@Html.ActionLink("Delete", "DeleteStudent", new { id = item.Id })</td>
        </tr>
    }
</table>
<td>@Html.ActionLink("Add", "AddStudent")</td>